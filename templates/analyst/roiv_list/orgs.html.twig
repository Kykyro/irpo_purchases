{% extends 'default/base.html.twig' %}


{% block content %}
    {% set region = roiv.getUserInfo().getRfSubject() %}
    <div class="row mt-3">
        <div class="col-lg-10 offset-lg-1">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>
                        Скачать потребность в ремонте
                        <b>
                            {{ region.getName() }}
                        </b>
                    </h5>
                </div>
                <div class="ibox-content">
                    <form action="{{ path('app_inspector_download_xlsx', {'id': roiv.getId()}) }}" method="post">
                        <label>
                            Год
                        </label>
                        <select class="form-control m-b" name="year">
                            <option value="2022">2022 год</option>
                            <option value="2023">2023 год</option>
                            <option value="2024">2024 год</option>
                            <option value="2025">2025 год</option>
                            <option value="2026">2026 год</option>
                        </select>

                        <input type="hidden" name="token" value="{{ csrf_token('download_xlsx') }}"/>
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-download"></i>
                            Скачать
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-10 offset-lg-1">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>
                        Список профессиональных образовательных организаций
                        <b>
                            {{ region.getName() }}
                        </b>
                    </h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <td class="col-md-2">Полное наименование профессиональной образовательной организации</td>
                            <td class="col-md-2">Сокращенное наименование профессиональной образовательной организации</td>
                            <td class="col-md-2">Адресс</td>
                            <td class="col-md-1">Кол-во строений</td>
                            <td class="col-md-1">Год</td>
                            <td class="col-md-1">Действия</td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in pagination %}
                            <tr>
                                <td>{{ i.getFullName() }}</td>
                                <td>{{ i.getShortName() }}</td>
                                <td>{{ i.getAddress() }}</td>
                                <td>{{ i.getBuildings()|length }}</td>
                                <td>{{ i.getYear() }}</td>
                                <td></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div classs="ibox-footer">
                    <div class="navigation">
                        {{ knp_pagination_render(pagination, 'default/twitter_bootstrap_v3_pagination.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 offset-lg-1">


        </div>
    </div>


{% endblock %}
