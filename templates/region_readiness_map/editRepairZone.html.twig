{% extends 'default/base.html.twig' %}

{% block content %}
    <h1>
        Карта готовности (Кластер)
    </h1>
    <div class="row">
        <div class="col-lg-6 offset-lg-3 договоmb-2">
            <div class="ibox collapsed border-bottom">
                <a class="collapse-link">
                    <div class="ibox-title">
                        <h5>
                            Изменение состояния ремонта для {{ zone.getName() }}
                        </h5>
                        <div class="ibox-tools">
                            <i class="fa fa-chevron-down"></i>
                        </div>
                    </div>
                </a>
                {{ form_start(form) }}
                <div class="ibox-content" style="display: block;">
                    <div class="form-group">
                        {{ form_row(form.Dismantling, {'type': 'number'}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.plasteringAndCommunication, {'type': 'number'}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.finishing, {'type': 'number'}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.branding, {'type': 'number'}) }}
                    </div>
                    <div class="form-group">
                        <label>Дата окончания</label>
                        <br>
                        {{ form_widget(form.endDate) }}

                    </div>
                    <div class="form-group">
                        <label>Фотографии</label>
                        <br>
                        {{ form_widget(form.images) }}

                    </div>
                    <div class="form-group">
                        {{ form_row(form.comment) }}
                    </div>

                </div>
                <div class="ibox-footer ">
                    <div class="row ml-2">
                        {{ form_row(form.submit) }}
                        <a href="{{ path('app_region_view_zone', {'id': zone.getId()}) }}">
                            <button class="btn btn-outline-danger ml-3" type="button">
                                <i class="fa fa-close">
                                    Отмена
                                </i>
                            </button>
                        </a>
                    </div>

                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>



{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/inspinia.js') }}"></script>
{% endblock %}