{% extends 'default/base.html.twig' %}

{% block content %}
    <h1>
        Карта готовности (Кластер)
    </h1>
    {% if addresess|length > 0 %}
    {% for i in addresess %}
    <div class="row">
        <div class="col-lg-10 offset-lg-1 mb-2">
            <div class="ibox collapsed border-bottom">
                <a class="collapse-link">
                    <div class="ibox-title">
                        <h5>
                            {{ i.getAddresses() }}
                        </h5>
                        <div class="ibox-tools">
                            <i class="fa fa-chevron-down"></i>
                        </div>
                    </div>
                </a>
                <div class="ibox-content" style="display: none;">
                    {% set zones = i.getClusterZones() %}
                    {% if zones|length > 0 %}
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <td>
                                        №
                                    </td>
                                    <td>
                                        Название зоны
                                    </td>
                                    <td>
                                        Действия
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                            {% for j in zones %}
                                <tr>
                                    <td>
                                        {{ loop.index }}
                                    </td>
                                    <td>
                                        {{ j.getName() }}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_region_view_zone', {'id': j.getId()}) }}">
                                            <button class="btn btn-success">
                                                <i class="fa fa-search">
                                                    Просмотр
                                                </i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="col-lg-4">
                            <div class="panel panel-warning">
                                <div class="panel-heading">
                                    <i class="fa fa-warning"></i> У кластера нет зон
                                </div>
                                <div class="panel-body">
                                    <p>
                                        Свяжитесь с куратором для добавления зон!
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    {% else %}
        <div class="row">
            <div class="col-lg-4 offset-lg-4">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <i class="fa fa-warning"></i> У кластера нет адресов
                    </div>
                    <div class="panel-body">
                        <p>
                            Свяжитесь с куратором для добавления адресов!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/inspinia.js') }}"></script>
{% endblock %}