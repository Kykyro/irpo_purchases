{% extends 'default/base.html.twig' %}

{% block content %}

    {% if addresess|length > 0 %}
    <div class="row mt-3">
        <div class="col-lg-10 offset-lg-1">
            <div class="tabs-container">
                <ul class="nav nav-tabs" role="tablist">
                    {% for i in addresess %}
                        <li><a class="nav-link {% if loop.index == 1 %} active show {% endif %}" data-toggle="tab" href="#tab-{{ loop.index }}"> {{ i.getAddresses() }}</a></li>
                    {% endfor %}

                </ul>

                <div class="tab-content">
                    {% for i in addresess %}
                        <div role="tabpanel" id="tab-{{ loop.index }}" class="tab-pane {% if loop.index == 1 %}active show{% endif %}">
                            <div class="panel-body">

                                {% set zones = i.getSortedClusterZones() %}
                                {% if zones|length > 0 %}
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <td class="col-md-1">
                                                №
                                            </td>
                                            <td class="col-md-9">
                                                Название зоны
                                            </td>
                                            <td class="col-md-2">
                                                Действия
                                            </td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for j in zones %}
                                            {% if j.isDoNotTake() %}
                                                <tr>
                                                    <td>
                                                        {{ loop.index }}
                                                    </td>
                                                    <td colspan="2" class="text-danger">
                                                        {{ j.getName() }}
                                                    </td>

                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td>
                                                        {{ loop.index }}
                                                    </td>
                                                    <td>
                                                        {{ j.getName() }}
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('app_region_view_zone', {'id': j.getId()}) }}">
                                                            <button class="btn btn-success">
                                                                <i class="fa fa-search">
                                                                    Просмотр
                                                                </i>
                                                            </button>
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endif %}

                                        {% endfor %}
                                        </tbody>
                                    </table>
                                {% else %}
                                    <div class="col-lg-4">
                                        <div class="panel panel-warning">
                                            <div class="panel-heading">
                                                <i class="fa fa-warning"></i> У кластера нет зон
                                            </div>
                                            <div class="panel-body">
                                                <p>
                                                    Свяжитесь с куратором для добавления зон!
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/inspinia.js') }}"></script>
{% endblock %}