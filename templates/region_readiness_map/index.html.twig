{% extends 'default/base.html.twig' %}

{% block content %}

    {% if addresess|length > 0 %}
        {% include 'default/instruction_button.html.twig' with {'file': 'Описание_инструкция_к_системе_Карта_готовности.pdf', 'button_text': 'Скачать инструкцию по картам готовности'} %}
        <div class="row mt-3">
            <div class="col-lg-6 offset-lg-3">
                {% if user.getReadinessMapChecks()|length > 0 %}
                    <div class="ibox">
                        <div class="ibox-title row">
                            <h5>
                                Проверка карт готовности
                            </h5>
                        </div>
                        <div class="ibox-content row">
                            <div class="col-sm-12 text-center">
                                {% set ReadinessMapChecks = user.getReadinessMapChecks().last() %}
                                {% if ReadinessMapChecks %}
                                    {% set status = ReadinessMapChecks.getStatus().last() %}
                                    {% if status %}
                                        <table class="table table-bordered">
                                            <thead>
                                            <tr>
                                                <td class="col-md-2">Статус</td>
                                                <td class="col-md-6">Комментарий</td>
                                                <td class="col-md-2">Дата создания</td>
                                                <td class="col-md-2"></td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr>
                                                <td> {{ status.getStatus() }}</td>
                                                <td>{{ status.getComment()|nl2br }}</td>
                                                <td>{{ status.getCreatedAt().format('d.m.Y') }}</td>
                                                <td>
                                                    {% if status.getStatus() == 'На доработке' %}
                                                        <a href="{{ path('app_region_rm_check_change_status', {'id': status.getId()}) }}">
                                                            <button class="btn btn-primary col-lg-12 check-alert">
                                                                <i class="fa fa-check "></i>
                                                                Замечания устранены
                                                            </button>
                                                        </a>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    {% else %}
                                        Нет замечаний
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>

                {% endif %}
            </div>
        </div>
        <div class="row mt-3">
        <div class="col-lg-10 offset-lg-1">
            <div class="tabs-container">
                <ul class="nav nav-tabs" role="tablist">
                    {% for i in addresess %}
                        <li><a class="nav-link {% if loop.index == 1 %} active show {% endif %}" data-toggle="tab" href="#tab-{{ loop.index }}"> {{ i.getAddresses() }}
                                <span class="badge badge-danger address-remarks" data-address="{{ i.getId() }}">a</span>
                            </a></li>

                    {% endfor %}

                </ul>

                <div class="tab-content">
                    {% for i in addresess %}
                        <div role="tabpanel" id="tab-{{ loop.index }}" class="tab-pane {% if loop.index == 1 %}active show{% endif %}">
                            <div class="panel-body">

                                {% set zones = i.getSortedClusterZones() %}
                                {% if zones|length > 0 %}
                                    <table class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <td class="col-md-1">
                                                №
                                            </td>
                                            <td class="col-md-9">
                                                Название зоны
                                            </td>
                                            <td class="col-md-2">
                                                Действия
                                            </td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for j in zones %}
                                            {% if j.isDoNotTake() %}
                                                <tr>
                                                    <td>
                                                        {{ loop.index }}
                                                    </td>
                                                    <td colspan="2" class="text-danger">
                                                        {{ j.getName() }}

                                                    </td>

                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td>
                                                        {{ loop.index }}
                                                    </td>
                                                    <td>
                                                        {{ j.getName() }}
                                                        {#{% if j.getZoneRemarks()|length> 0 %}#}
                                                            <span class="badge badge-danger remarks"
                                                                  data-remarks="{{ j.getZoneRemarks()|length }}"
                                                                    data-address="{{ j.getAddres().getId() }}">
                                                            </span>
                                                        {#{% endif %}#}
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('app_region_view_zone', {'id': j.getId()}) }}">
                                                            <button class="btn btn-success">
                                                                <i class="fa fa-search">
                                                                    Просмотр
                                                                </i>

                                                            </button>
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endif %}

                                        {% endfor %}
                                        </tbody>
                                    </table>
                                {% else %}
                                    <div class="col-lg-4">
                                        <div class="panel panel-warning">
                                            <div class="panel-heading">
                                                <i class="fa fa-warning"></i> У кластера нет зон
                                            </div>
                                            <div class="panel-body">
                                                <p>
                                                    Свяжитесь с куратором для добавления зон!
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>

        <div class="row mt-3">
            <div class="col-lg-10 offset-lg-1">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>
                            Общая статистика по кластеру
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <td style="vertical-align: inherit; text-align: center" class="col-md-2"><strong>Средний % ремонтных работ общих помещений</strong></td>
                                <td style="vertical-align: inherit; text-align: center" class="col-md-2"><strong>Средний % ремонтных работ зон под вид работ</strong></td>
                                <td style="vertical-align: inherit; text-align: center" class="col-md-2"><strong>Средний % ремонтных работ в общем</strong></td>

                                <td style="vertical-align: inherit; text-align: center" class="col-md-2"><strong>Крайний срок поставки оборудования (Планируемый)</strong></td>
                                <td style="vertical-align: inherit; text-align: center" class="col-md-2"><strong>Крайняя дата завершения ремонта</strong></td>
                            </tr>
                            </thead>
                            <tbody>

                            <tr>
                                <td style="vertical-align: inherit; text-align: center">{{ user.getMidRepairByCommon()|round(2, 'floor') }} %</td>
                                <td style="vertical-align: inherit; text-align: center">{{ user.getMidRepairByZone()|round(2, 'floor') }} %</td>
                                {% set repair_all = ((user.getMidRepairByZone()+user.getMidRepairByCommon())/2)|round(2, 'floor') %}
                                <td style="vertical-align: inherit; text-align: center" id="repair-all" data-repair="{{ repair_all }}">{{ repair_all }} %</td>

                                <td style="vertical-align: inherit; text-align: center" id="EquipmentDeliveryDeadline">{{ user.getEquipmentDeliveryDeadline() }}</td>
                                <td style="vertical-align: inherit; text-align: center" id="DeadlineForCompletionOfRepairs">{{ user.getDeadlineForCompletionOfRepairs() }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <td style="vertical-align: inherit; text-align: center" class="col-md-2"><strong>Общее кол-во оборудования по ИЛу</strong></td>
                                {#<td style="vertical-align: inherit; text-align: center" class="col-md-2"><strong>Поставлено оборудования</strong></td>#}
                                <td style="vertical-align: inherit; text-align: center" class="col-md-2"><strong>Средний % укомплектованности МТБ</strong></td>
                                <td style="vertical-align: inherit; text-align: center" class="col-md-2"><strong>Введено в эксплуатацию</strong></td>

                            </tr>
                            </thead>
                            <tbody>
                            {% set equipment = user.getCountOfEquipment() %}
                            <tr>
                                <td style="vertical-align: inherit; text-align: center">{{ proc['total'] }}</td>
                                {#<td style="vertical-align: inherit; text-align: center">#}
                                {#{{ proc['fact'] }} / {{ mtb_fact }}#}
                                {#</td>#}
                                {#{% if equipment['total'] > 0 %}#}
                                {#<td style="vertical-align: inherit; text-align: center">{{ equipment['fact'] }} / {{ ((equipment['fact']/equipment['total'])*100)|round(2, 'floor') }} %</td>#}
                                {#{% else %}#}
                                {#<td>{{ equipment['fact'] }} / 0%</td>#}
                                {#{% endif %}#}
                                <td style="vertical-align: inherit; text-align: center" id="mtb-all" data-mtb="{{ mtb_fact }}">
                                    {{ mtb_fact }} %
                                </td>
                                {% if equipment['total'] > 0 %}
                                    {#<td style="vertical-align: inherit; text-align: center">{{ equipment['putInOperation'] }} / {{ ((equipment['putInOperation']/equipment['total'])*100)|round(2, 'floor') }} %</td>#}
                                    <td style="vertical-align: inherit; text-align: center">
                                        {{ proc['put'] }} / {{ mtb_put }}%
                                    </td>
                                {% else %}
                                    <td style="vertical-align: inherit; text-align: center">{{ proc['put'] }} / 0%</td>
                                {% endif %}


                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/inspinia.js') }}"></script>
    <script src="{{ asset('js/scripts/readinessMarksRemarks.js?ver=1.1') }}"></script>
    <script>
        $(document).ready(function(){
            let EquipmentDeliveryDeadline = $('#EquipmentDeliveryDeadline');
            let DeadlineForCompletionOfRepairs = $('#DeadlineForCompletionOfRepairs');

            var today = new Date();
            if(EquipmentDeliveryDeadline.html().length > 0)
            {
                let _EquipmentDeliveryDeadline = EquipmentDeliveryDeadline.html().split('.');
                _EquipmentDeliveryDeadline = _EquipmentDeliveryDeadline[2]+"-"+_EquipmentDeliveryDeadline[1]+"-"+_EquipmentDeliveryDeadline[0];
                if(new Date(_EquipmentDeliveryDeadline) < today)
                {
                    EquipmentDeliveryDeadline.addClass('text-danger font-weight-bold')
                }
            }


            if(DeadlineForCompletionOfRepairs.html().length > 0)
            {
                let _DeadlineForCompletionOfRepairs = DeadlineForCompletionOfRepairs.html().split('.');
                _DeadlineForCompletionOfRepairs = _DeadlineForCompletionOfRepairs[2]+"-"+_DeadlineForCompletionOfRepairs[1]+"-"+_DeadlineForCompletionOfRepairs[0];
                if(new Date(_DeadlineForCompletionOfRepairs) < today)
                {
                    DeadlineForCompletionOfRepairs.addClass('text-danger font-weight-bold')
                }
            }
            let repairAll = $('#repair-all');
            let mtbAll = $('#mtb-all');
            if(repairAll.data('repair') == 100)
            {
                DeadlineForCompletionOfRepairs.removeClass('text-danger');
                DeadlineForCompletionOfRepairs.removeClass('font-weight-bold');
            }
            if(mtbAll.data('mtb') == 100)
            {
                EquipmentDeliveryDeadline.removeClass('text-danger');
                EquipmentDeliveryDeadline.removeClass('font-weight-bold');
            }

            $('.check-alert').click((event)=>{
                var answer = window.confirm("Замечания устранены?");
                if (answer) {
                    console.log('yes');

                }
                else {
                    console.log('no');
                    event.preventDefault();
                }
            })
        });
    </script>
{% endblock %}