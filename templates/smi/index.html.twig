{% extends "default/base.html.twig" %}

{% block styles %}
    <link href="{{ asset('css/plugins/select2/select2.min.css') }}" rel="stylesheet" />

{% endblock %}

{% block content %}
    <div class="wrapper wrapper-content animated fadeInRight col-sm-10 offset-sm-1 ">
        <div class="row">
            <div class="ibox-content block-shadow col-lg-12  mb-4">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h2 style="font-weight: bold; margin-bottom: -1rem">Поиск</h2>
                        <div class="ibox-tools">

                        </div>
                    </div>
                </div>
                <div class="ibox-content ">
                    {{ form_start(form) }}
                    <label>Субъект РФ</label>
                    {{ form_widget(form.rf_subject) }}
                    <label>Год создания кластера</label>
                    {{ form_widget(form.year) }}
                    <hr>

                    {{ form_widget(form.submit) }}
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="row col-lg-12">

                {% for i in pagination %}


                    <div class="col-lg-4 animated fadeIn cluster-card">
                        <div class="contact-box">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h3>
                                        <strong>
                                            {{ i.getUserInfo().getEducationalOrganization() }}
                                        </strong>
                                    </h3>
                                    <p><i class="fa fa-map-marker"></i> {{ i.getUserInfo().getRfSubject().getName() }}</p>
                                    <span class="badge badge-success">{{ i.getUserInfo().getYear() }} год</span>
                                    <br>

                                    {% if "ROLE_SMALL_CLUSTERS" in  i.getRoles() %}
                                        <span class="badge badge-success">Малый кластер</span>
                                    {% endif %}
                                    {% if "ROLE_REGION" in  i.getRoles() %}
                                        <span class="badge badge-primary">Производственный кластер</span>
                                    {% endif %}

                                    <address>
                                        <b>Кластер: </b>{{ i.getUserInfo().getCluster() }}<br>
                                        <b>Отрасль: </b>{{ i.getUserInfo().getDeclaredIndustry() }} <br>
                                        <b>Организация: </b>{{ i.getUserInfo().getOrganization() }}<br>
                                        <b>Пользователь: </b>{{ i.getUuid() }} <br>
                                    </address>
                                    <div style="overflow: hidden">
                                        {#<a href="{{ path('app_roiv_show_info_about_cluster', {'id': i.getId()}) }}">#}
                                            {#<button class="btn btn-cyan col-lg-12 mb-2">#}
                                                {#<div class="fa fa-archive"></div>#}
                                                {#Подробная информация о кластере#}
                                            {#</button>#}
                                        {#</a>#}


                                        {#<a href="{{ path('app_weekly_budget_amount', {'id': i.getId()}) }}">#}
                                        {#<button class="btn btn-success col-lg-12 mb-2">#}
                                        {#<div class="fa fa-money"></div>#}
                                        {#Недельная сумма по бюджету#}
                                        {#</button>#}
                                        {#</a>#}

                                        <a href="{{ path('app_roiv_readiness_map', {'id': i.getId()}) }}">
                                            <button class="btn btn-primary col-lg-12 mb-2">
                                                <div class="fa fa-check-circle"></div>
                                                Карта готовности
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}


            </div>

        </div>
        <div class="row">
            <div class="navigation">
                {{ knp_pagination_render(pagination, 'default/twitter_bootstrap_v3_pagination.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('js/plugins/select2/select2.full.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('.select2').select2({
                closeOnSelect : true,
                placeholder : "...",
                allowHtml: true,
                allowClear: true
            });
        });
    </script>
{% endblock %}