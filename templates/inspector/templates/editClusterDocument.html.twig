{% extends 'default/base.html.twig' %}

{% block content %}
    <div class="row mt-5">
        <div class="col-lg-6 offset-lg-3">
            {% if errors|length > 0 %}
                <div class="row">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            Ошибки
                        </div>
                        <div class="panel-body">
                            <ol>
                                {% for error in errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ol>

                        </div>
                        <div class="panel-footer">

                        </div>
                    </div>

                </div>
            {% endif %}
            <div class="ibox">
                <div class="ibox-title">
                    <h5>
                        Редактирование документов кластера
                    </h5>
                </div>
                {{ form_start(form) }}
                    <div class="ibox-content">
                        {{ form_row(form.PartnershipAgreement) }}
                        <hr>
                        {{ form_row(form.FinancialAgreement) }}
                        <hr>
                        {{ form_row(form.InfrastructureSheet) }}
                        <hr>
                        {{ form_row(form.DesignProject) }}
                        <hr>
                        {{ form_row(form.ActivityProgram) }}
                        <hr>
                        {{ form_row(form.notFinancialAgreement) }}
                        <hr>
                        {{ form_row(form.infrastructureSheetPractice) }}
                    </div>
                    <div class="ibox-footer">
                        {{ form_row(form.submit) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}