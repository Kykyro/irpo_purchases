                                        <td>29</td>
                                        <td>30</td>
                                        <td>31</td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for i in prodProc %}
                                        {% if i.isIsCancelled() %}
                                            <tr id="prod-proc-tr" style="background-color: rgba(177,92,94,0.49)">
                                        {% else %}
                                            <tr id="prod-proc-tr">
                                        {% endif %}
                                            <td class="bg-success">{{ loop.index }}</td>
                                            {% for j in i.getAsRowWithFactFunds() %}
                                                {% if loop.index == 11 %}
                                                <td>
                                                    <a href="{{ j }}">
                                                        {{ j }}
                                                    </a>
                                                </td>
                                                {% elseif loop.index in [3,4,5,6,7,19,20,20,21,22,25,26,27,28] %}
                                                    <td class="cell-number">
                                                        {{ j }}
                                                    </td>
                                                {% else %}
                                                    <td>
                                                        {{ j }}
                                                    </td>

                                                {% endif %}
                                            {% endfor %}

                                        <td>

                                            {% if i.isHasFiles() %}
                                                {#{% if is_granted('ROLE_REGION') or is_granted("ROLE_SMALL_CLUSTERS") %}#}
                                                    {#<a href="{{ path('app_inspector_view_purchase', { 'id' : i.getId()}) }}"#}
                                                       {#target="_blank">#}
