        <div class="offset-lg-3 col-lg-6">
            <div class="ibox collapsed border-bottom">
                <a class="collapse-link">
                    <div class="ibox-title">
                        <h5>
                           Замечания
                        </h5>
                        <div class="ibox-tools">
                            <i class="fa fa-chevron-down"></i>
                        </div>
                    </div>
                </a>
                <div class="ibox-content" style="display: block;">
                    <table class="table table-bordered">
                        <thed>
                        <tr>
                            <td class="col-md-1">
                                id
                            </td>
                            <td class="col-md-3">
                                Сообщение
                            </td>
                            <td class="col-md-3">
                                Дата создания
                            </td>
                            <td class="col-md-3">
                                Куратор
                            </td>
                            <td class="col-md-3">
                                Прочитано?
                            </td>
                            <td class="col-md-1">

                            </td>
                        </tr>

                        </thed>
                        <tbody>
                            {% for i in notes %}
                                <tr>
                                    <td>
                                        {{ i.getId() }}
                                    </td>
                                    <td>
                                        {{ i.getNote() }}
                                    </td>
                                    <td>
                                        {% if i.getCreadtedAt() %}
                                            {{ i.getCreadtedAt().format('d.m.Y') }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ i.getCurator().getName() }}
                                    </td>
                                    <td>
                                        {% if i.isIsRead %}
                                            <span class="badge badge-success">
                                                <i class="fa fa-check">

                                                </i>
                                            </span>
                                        {% else %}
                                            <span class="badge badge-danger">
                                                <i class="fa fa-close">

                                                </i>
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_inspector_delete_purchase_note', {'id': i.getId()}) }}" class="delete-alert">
                                            <button class="btn btn-danger">
                                                <i class="fa fa-trash"></i>
                                                Удалить
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div>
            </div>
        </div>
    </div>
</div>
    {% endif %}


