{% extends "default/base.html.twig" %}

{% block content %}
    {% set isSoloSup = purchase.getMethodOfDetermining() == "Единственный поставщик" %}
    {% set isHavePrepayment = purchase.isIsHasPrepayment() %}
    {% set isPlanned = purchase.getIsPlanned() %}
    <style>
        input[type='number'] {
            -moz-appearance:textfield;
        }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
        }
        td{
            border-right: 2px dotted lightgrey;
        }
    </style>

    {{ include('default/cluster_info.html.twig', {'user_info': purchase.getUser.getUserInfo()}) }}

    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="wrapper wrapper-content">
                <div class="row d-flex justify-content-center m-3">
                    <div>
                        <h2>
                            <nav>{{ title }}</nav>
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="row d-flex justify-content-center m-3">
        <div class="m-2">

            {% if is_granted('ROLE_INSPECTOR') or is_granted('ROLE_SMALL_CURATOR') %}
                <a href="{{ path("app_purchases_history", {id: app.request.get("id")}) }}">
                    <button class="btn-gray-all btn btn-outline-success ">
                        <div class="fa fa-edit"></div>
                        История
                    </button>
                </a>
                <a href="{{ path("app_inspector_add_note_to_purchase", {id: app.request.get("id")}) }}">
                    <button class="btn btn-warning">
                        <i class="fa fa-pencil">
                            Добавить замечание
                        </i>
                    </button>
                </a>
                {% if purchase.isIsRead() %}
                    <a href="{{ path("app_inspector_view_purchase_read", {id: app.request.get("id")}) }}">
                        <button class="btn btn-danger ">
                            <i class="fa fa-close">
                                Отметить как <b>не прочитано</b>
                            </i>
                        </button>
                    </a>
                {% else %}
                    <a href="{{ path("app_inspector_view_purchase_read", {id: app.request.get("id")}) }}">
                        <button class="btn btn-primary">
                            <i class="fa fa-check">
                                Отметить как прочитано
                            </i>
                        </button>
                    </a>
                {% endif %}
            {% endif %}
        </div>
    </div>
    {% set notes = purchase.getPurchaseNotes() %}
    {% if notes|length > 0 %}
