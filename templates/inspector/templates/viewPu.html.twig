                            <i class="fa fa-chevron-down"></i>
                        </div>
                    </div>
                </a>
                <div class="ibox-content" style="display: none;">
                    {% macro deleteButton(id, path) %}
                        <a href="{{ path("purchases_history_delete", {'purchases_id': id, "path": path}) }}">
                            <span class="badge badge-danger delete-alert">
                                <i class="fa fa-trash"></i>
                                Удалить
                            </span>
                        </a>
                    {% endmacro %}
                    {% macro fileRow(title, attach_file, history_file, path ) %}
                        <tr>
                            <td class="col-md-3" rowspan="2">
                                {{ title }}

                            </td>
                            <td>
                                {% if attach_file %}
                                    <a href="{{ path('app_download_file_by_route', {'file': attach_file, 'route':path}) }}">
                                        <i class="fa fa-download">
                                            {{ title }}
                                        </i>
                                        <span class="badge badge-info">
                                            Актуальный
                                        </span>
                                    </a>
                                {% endif %}
                            </td>
                            {#<td>#}
                                {#aaaa#}
                            {#</td>#}
                        </tr>
                        <tr>
                            <td>
                                <ul>
                                    {% if history_file|length > 0 %}
                                        {% for i in history_file %}
                                            {% if i.getOldVal() %}
                                                <li>
                                                    <a href="{{ path('app_download_file_by_route', {'file': i.getOldVal(), 'route':path}) }}">
                                                        <i class="fa fa-download">
                                                            Договор/проект договора от {{ i.getCreatedAt().format('d.m.Y') }}
                                                        </i>
                                                    </a>
                                                    {{ _self.deleteButton(i.getId(), path) }}
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </ul>
                            </td>
                            {#<td>#}
                                {#bbbbb#}
                            {#</td>#}
                        </tr>
                    {% endmacro %}
                    <table class="table table-bordered">
                        {{ _self.fileRow("Договор/проект договора", purchase.getFileDir(), file, 'purchases_files_directory' ) }}
                        {{ _self.fileRow("Дополнительный договор", purchase.getAdditionalAgreement(), additionalAgreement, 'additional_agreement_directory' ) }}
                        {{ _self.fileRow("Закрывающий документ", purchase.getClosingDocument(), closingDocument, 'closing_files_directory' ) }}
                        {{ _self.fileRow("Платежное поручение", purchase.getPaymentOrder(), paymentOrder, 'payment_orders_directory' ) }}

                        <tr>
                            <td>
                                Иные документы
                            </td>
                            <td>
                                <ul>
                                    {% for i in purchase.getAnotherDocuments()|reverse %}
                                        <li>
                                            <a href="{{ path('app_download_file_by_route', {'file': i.getFile(), 'route':'another_documents_directory'}) }}">
                                                <i class="fa fa-download">
                                                    Иной документ {{ i.getDateFormat() }}
                                                </i>
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>



