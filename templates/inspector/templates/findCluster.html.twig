{% extends "default/base.html.twig" %}




{% block content %}
<div class="row">
    <div class="col-sm-10 offset-sm-1 ">
        <div class="wrapper wrapper-content ">
            <div class="ibox-content block-shadow ">
                <h1>Поиск кластера</h1>

                <div class="row">
                    {{ form_start(form) }}
                        <div class="form-group row m-3">
                            <label class="col-sm-2 col-form-label text-left"><strong>Год</strong></label>
                            <label class="col-sm-10">{{ form_widget(form.year) }}</label>
                        </div>
                        <div class="form-group  row m-3">
                            <label class="col-sm-2 col-form-label text-left"><strong>Регион</strong></label>
                            <label class="col-sm-10">{{ form_widget(form.rf_subject) }}</label>
                        </div>
                        <div class="form-group row m-3 ">
                            <div class="col-lg-12 ">
                                <button class="col-lg-12  btn-gray-all btn btn-outline-success btn-lg " type="submit">
                                    <nav class="fa fa-search "></nav>
                                    Найти
                                </button>

                            </div>
                        </div>
                    {{ form_end(form) }}

                </div>


            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/scripts/findCluster.js') }}"></script>
{% endblock %}