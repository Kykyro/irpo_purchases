{% extends 'default/base.html.twig' %}
{% block styles %}
    <link href="{{ asset('css/plugins/blueimp/css/blueimp-gallery.min.css') }}" rel="stylesheet">
{% endblock %}
{% block content %}
    {% set addresses = user.getClusterAddresses() %}
    {% if addresses|length > 0 %}
       <div class="row mt-3">
           <div class="col-lg-10 offset-lg-1">
               <div class="tabs-container">
                   <ul class="nav nav-tabs" role="tablist">
                       {% for i in addresses %}
                        <li><a class="nav-link {% if loop.index == 1 %}active show{% endif %}" data-toggle="tab" href="#tab-{{ loop.index }}"> {{ i.getAddresses() }}</a></li>
                       {% endfor %}
                   </ul>
                   <div class="tab-content">
                       {% for i in addresses %}
                           <div role="tabpanel" id="tab-{{ loop.index }}" class="tab-pane {% if loop.index == 1 %}active show{% endif %}">
                               <div class="panel-body">
                                   <table class="table table-bordered">
                                       <thead>
                                       <tr>

                                           <td class="col-md-2">
                                               Адрес
                                           </td>
                                           <td class="col-md-2">
                                               Зоны
                                           </td>
                                           <td>Средний % ремонтных работ по зонам под видам работ</td>
                                           <td>Средний % ремонтных работ по общим зонам</td>
                                           <td>Средний % ремонтных работ в общем</td>
                                           <td>Крайний срок поставки оборудования</td>
                                           <td>Крайняя дата завершения ремонта</td>
                                           <td class="col-md-1">
                                               Действия
                                           </td>
                                       </tr>
                                       </thead>
                                       <tbody>

                                       <tr>

                                           <td>
                                               {{ i.getAddresses() }}
                                           </td>

                                           <td>
                                               {% set zones = i.getClusterZones() %}
                                               {% if zones|length > 0 %}
                                                   <ul style=" list-style-type: none;" class="m-0 p-0">
                                                       {% for j in zones %}
                                                           <a href="{{ path('app_inspector_view_zone', {'id' : j.getId()}) }}">
                                                               <li>
                                                                   <button class="btn btn-outline-dark mb-2 col-lg-12">
                                                                      {{ j.getName() }}
                                                                   </button>
                                                               </li>
                                                           </a>
                                                       {% endfor %}
                                                   </ul>
                                               {% else %}
                                                   <span class="badge badge-warning">
                                                        Нет зон
                                                    </span>
                                               {% endif %}
                                           </td>
                                           {% set repairMidByZone = i.getMidRepairByZone() %}
                                           {% set repairMidByCommon = i.getMidRepairByCommon() %}
                                           <td>{{ repairMidByZone }} %</td>
                                           <td>{{ repairMidByCommon }} %</td>
                                           <td>{{ (repairMidByZone+repairMidByCommon)/2 }} %</td>
                                           <td>
                                               {% if i.getEquipmentDeliveryDeadline() %}
                                                   {{ i.getEquipmentDeliveryDeadline().format('d.m.Y') }}
                                               {% endif %}
                                           </td>
                                           <td>
                                               {% if i.getDeadlineForCompletionOfRepairs() %}
                                                   {{ i.getDeadlineForCompletionOfRepairs().format('d.m.Y') }}
                                               {% endif %}
                                           </td>
                                           <td>
                                               <a href="{{ path('app_inspector_view_address', {'id': i.getId()}) }}">
                                                   <button class="btn btn-success col-lg-12 mb-2">
                                                       <i class="fa fa-search">
                                                           Просмотр
                                                       </i>
                                                   </button>
                                               </a>
                                               <a href="{{ path('app_inspector_add_zone', {'id': i.getId()}) }}">
                                                   <button class="btn btn-primary col-lg-12 mb-2">
                                                       <i class="fa fa-plus">
                                                           Добавить зону
                                                       </i>
                                                   </button>
                                               </a>

                                           </td>
                                       </tr>

                                       </tbody>
                                   </table>
                               </div>

                           </div>
                       {% endfor %}
                   </div>
               </div>
           </div>
       </div>
    {% endif %}
    <div class="row mt-3">
        <div class="col-lg-10 offset-lg-1">
            <a href="{{ path('app_inspector_add_addresses', {'id': user.getId()}) }}">
                <button class="btn btn-primary">
                    <i class="fa fa-plus">
                        Добавить Адрес
                    </i>
                </button>
            </a>
        </div>
    </div>
    {% if addresses|length > 0 %}
        <div class="row mt-3">
            <div class="col-lg-10 offset-lg-1">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>
                            Галерея
                        </h5>
                    </div>
                    <div class="ibox-content">


                        {{ form_start(form) }}
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>От: </label>
                                    {{ form_row(form.startDate) }}

                                    <label>До: </label> <br>
                                    {{ form_widget(form.endDate) }}
                                </div>
                                {{ form_row(form.addres) }}
                            </div>

                            <div class="form-inline">
                                <div class="form-group mt-3">
                                    {{ form_row(form.submit) }}
                                    <div class="ml-3"></div>
                                    {{ form_row(form.download) }}
                                </div>
                            </div>
                        {{ form_end(form) }}
                        <hr>

                        {% if _photos %}
                        <div class="row">
                        <div class="col-lg-12">
                            <div class="lightBoxGallery">
                                {% set title = _photos[0].getRepair().getClusterZone().getName() %}
                                {#<div class="text-left">#}
                                    <h3>{{ title }}</h3>
                                {#</div>#}

                                {% for ver in _photos %}
                                    {% if title != ver.getRepair().getClusterZone().getName() %}
                                        {% set title = ver.getRepair().getClusterZone().getName() %}
                                        {#<div class="text-left">#}
                                            <h3>{{ title }}</h3>
                                        {#</div>#}
                                    {% endif %}
                                    {% for i in ver.getRepairPhotos() %}

                                        <a href="{{ asset('/uploads/repairPhotos/'~i.getPhoto()) }}" title="{{ title }}" data-gallery="">
                                            <img src="{{ asset('/uploads/repairPhotos/'~i.getPhoto()) }}" style="width: 100px">
                                        </a>
                                    {% endfor %}
                                {% endfor %}
                                <!-- The Gallery as lightbox dialog, should be a child element of the document body -->
                                <div id="blueimp-gallery" class="blueimp-gallery">
                                    <div class="slides"></div>
                                    <h3 class="title"></h3>
                                    <a class="prev">‹</a>
                                    <a class="next">›</a>
                                    <a class="close">×</a>
                                    <a class="play-pause"></a>
                                    <ol class="indicator"></ol>
                                </div>

                            </div>
                            </div>
                        </div>

                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}


{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/inspinia.js') }}"></script>
    <script src="{{ asset('js/plugins/blueimp/jquery.blueimp-gallery.min.js') }}"></script>
{% endblock %}
