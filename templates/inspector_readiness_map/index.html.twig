{% extends 'default/base.html.twig' %}

{% block content %}
    {% set addresses = user.getClusterAddresses() %}
    {% if addresses|length > 0 %}
       <div class="row mt-3">
           <div class="col-lg-10 offset-lg-1">
               <div class="tabs-container">
                   <ul class="nav nav-tabs" role="tablist">
                       {% for i in addresses %}
                        <li><a class="nav-link {% if loop.index == 1 %}active show{% endif %}" data-toggle="tab" href="#tab-{{ loop.index }}"> {{ i.getAddresses() }}</a></li>
                       {% endfor %}
                   </ul>
                   <div class="tab-content">
                       {% for i in addresses %}
                           <div role="tabpanel" id="tab-{{ loop.index }}" class="tab-pane {% if loop.index == 1 %}active show{% endif %}">
                               <div class="panel-body">
                                   <table class="table table-bordered">
                                       <thead>
                                       <tr>

                                           <td class="col-md-2">
                                               Адрес
                                           </td>
                                           <td class="col-md-2">
                                               Зоны
                                           </td>
                                           <td>Средний % по зонам подвидам работ</td>
                                           <td>Средний % по общим зонам</td>
                                           <td>Средний % в общем</td>
                                           <td>Крайний срок поставки оборудования</td>
                                           <td>Крайняя дата завершения ремонта</td>
                                           <td class="col-md-3">
                                               Действия
                                           </td>
                                       </tr>
                                       </thead>
                                       <tbody>

                                       <tr>

                                           <td>
                                               {{ i.getAddresses() }}
                                           </td>

                                           <td>
                                               {% set zones = i.getClusterZones() %}
                                               {% if zones|length > 0 %}
                                                   <ol>
                                                       {% for j in zones %}
                                                           <a href="{{ path('app_inspector_view_zone', {'id' : j.getId()}) }}">
                                                               <li>{{ j.getName() }}</li>
                                                           </a>
                                                       {% endfor %}
                                                   </ol>
                                               {% else %}
                                                   <span class="badge badge-warning">
                                            Нет зон
                                        </span>

                                               {% endif %}
                                           </td>
                                           {% set repairMidByZone = i.getMidRepairByZone() %}
                                           {% set repairMidByCommon = i.getMidRepairByCommon() %}
                                           <td>{{ repairMidByZone }} %</td>
                                           <td>{{ repairMidByCommon }} %</td>
                                           <td>{{ (repairMidByZone+repairMidByCommon)/2 }} %</td>
                                           <td>
                                               {% if i.getEquipmentDeliveryDeadline() %}
                                                   {{ i.getEquipmentDeliveryDeadline().format('d.m.Y') }}
                                               {% endif %}
                                           </td>
                                           <td>
                                               {% if i.getDeadlineForCompletionOfRepairs() %}
                                                   {{ i.getDeadlineForCompletionOfRepairs().format('d.m.Y') }}
                                               {% endif %}
                                           </td>
                                           <td>
                                               <a href="{{ path('app_inspector_view_address', {'id': i.getId()}) }}">
                                                   <button class="btn btn-success">
                                                       <i class="fa fa-search">
                                                           Просмотр
                                                       </i>
                                                   </button>
                                               </a>
                                               <a href="{{ path('app_inspector_add_zone', {'id': i.getId()}) }}">
                                                   <button class="btn btn-primary">
                                                       <i class="fa fa-plus">
                                                           Добавить зону
                                                       </i>
                                                   </button>
                                               </a>
                                               <a href="#">
                                                   <button class="btn btn-danger">
                                                       <i class="fa fa-trash">
                                                           Удалить
                                                       </i>
                                                   </button>
                                               </a>
                                           </td>
                                       </tr>

                                       </tbody>
                                   </table>
                               </div>

                           </div>
                       {% endfor %}
                   </div>
               </div>
           </div>
       </div>
    {% endif %}
    <div class="row mt-3">
        <div class="col-lg-10 offset-lg-1">
            <a href="{{ path('app_inspector_add_addresses', {'id': user.getId()}) }}">
                <button class="btn btn-primary">
                    <i class="fa fa-plus">
                        Добавить Адрес
                    </i>
                </button>
            </a>
        </div>
    </div>



{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/inspinia.js') }}"></script>
{% endblock %}