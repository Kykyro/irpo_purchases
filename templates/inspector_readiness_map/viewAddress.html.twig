{% extends 'default/base.html.twig' %}


{% block content %}


    <div class="row mt-3">
        <div class="col-lg-10 offset-lg-1 col-md-10 offset-md-1 mb-2">
            <div class="ibox collapsed border-bottom">

                <div class="ibox-title">
                    <h5>

                    </h5>
                    <a href="{{ path('app_inspector_readiness_map', {'id': address.getUser().getId()}) }}">
                        <button class="btn">
                            <i class="fa fa-arrow-left">
                                Назад
                            </i>
                        </button>
                    </a>
                </div>


                <div class="ibox-content" style="display: block;">
                    <div class="tabs-container">
                        <ul class="nav nav-tabs" role="tablist">
                            <li><a class="nav-link active show" data-toggle="tab" href="#tab-1"> {{ address.getAddresses() }}</a></li>
                        </ul>
                        <div class="tab-content">
                            <div role="tabpanel" id="tab-1" class="tab-pane active show">
                                <div class="panel-body">
                                    {% set zones = address.getClusterZones() %}

                                    {% if zones|length > 0 %}
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <td class="col-md-1">
                                                    № п/п
                                                </td>
                                                <td class="col-md-2">
                                                    Название
                                                </td>
                                                <td>% выполнения ремонтных работ</td>

                                                <td>Крайний срок поставки оборудования</td>
                                                <td>Дата завершения ремонтных работ</td>
                                                <td class="col-md-1">
                                                    Действия
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for i in zones %}

                                            <tr>
                                                <td>{{ loop.index }}</td>
                                                <td>{{ i.getName() }}</td>
                                                <td>{{ i.getZoneRepair().getTotalPercentage() }} %</td>
                                                <td>
                                                    {% if i.getMaxEquipmentDeliveryDeadline() %}
                                                        {{ i.getMaxEquipmentDeliveryDeadline().format('d.m.Y') }}
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if i.getZoneRepair().getEndDate() %}
                                                        {{ i.getZoneRepair().getEndDate().format('d.m.Y') }}
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <a href="{{ path('app_inspector_view_zone', {'id': i.getId()}) }}">
                                                        <button class="btn btn-success col-lg-12 mb-2">
                                                            <i class="fa fa-search">
                                                                Просмотр
                                                            </i>
                                                        </button>
                                                    </a>
                                                    <a href="{{ path('app_inspector_rm_delete_zone', {'zone_id': i.getId()}) }}">
                                                        <button class="btn btn-danger col-lg-12 delete-alert">
                                                            <i class="fa fa-trash">
                                                                Удалить
                                                            </i>
                                                        </button>
                                                    </a>
                                                </td>
                                            </tr>
                                           {% endfor %}
                                        </tbody>
                                    </table>
                                    {% else %}
                                        <div class="col-lg-4">
                                            <div class="panel panel-warning">
                                                <div class="panel-heading">
                                                    <i class="fa fa-warning"></i> Нет зон
                                                </div>
                                                <div class="panel-body">
                                                    <a href="{{ path('app_inspector_add_zone', {'id': address.getId()}) }}">
                                                        <button class="btn btn-outline-warning">
                                                            <i class="fa fa-plus"> Добавить зону </i>
                                                        </button>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="ibox-footer">

                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/inspinia.js') }}"></script>
    <script src="{{ asset('js/plugins/pace/pace.min.js') }}"></script>
{% endblock %}