{% extends 'default/base.html.twig' %}

{% block content %}
<div class="row mt-3">
    <div class="col-sm-10 offset-sm-1">
        <a href="{{ path('app_inspector_readiness_map', {'id': user.getId()}) }}">
            <button class="btn btn-outline-dark">
                <i class="fa fa-arrow-left"></i>
                Назад
            </button>
        </a>
        <div class="ibox">
            <div class="ibox-title">

            </div>
            <div class="ibox-content">
                {% for i in pagination %}
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td colspan="3">
                                {{ i.getCreatedAt().format('d.m.Y') }}
                            </td>

                        </tr>
                        <tr>
                            <td>Дата создания</td>
                            <td>Статус</td>
                            <td>Коммент</td>
                        </tr>
                    </thead>
                    <tbody>
                        {% for j in i.getStatus() %}
                        <tr>
                            <td>
                                {{ j.getCreatedAt().format('d.m.Y') }}
                            </td>
                            <td>
                                {{ j.getStatus() }}
                            </td>
                            <td>
                                {{ j.getComment()|nl2br }}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% endfor %}
            </div>
        </div>
        <div class="ibox-footer">
            <div class="navigation">
                {{ knp_pagination_render(pagination, 'default/twitter_bootstrap_v3_pagination.html.twig') }}
            </div>
        </div>
    </div>
</div>


{% endblock %}