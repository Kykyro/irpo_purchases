{% extends 'default/base.html.twig' %}



{% block content %}

{{ include('default/cluster_info.html.twig', {'user_info': user.getUserInfo()}) }}

<div class="row mt-3">
    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-title">
                <h5>
                    Средства
                </h5>
            </div>
            <div class="ibox-content">
                <table class="table table-bordered">
                    <thead>
                        <tr class="text-center">
                            <td class="col-md-1">Источник</td>
                            <td class="col-md-3">Необходимо</td>
                            <td class="col-md-3">Принято</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="text-center">
                            <td>РД</td>
                            <td class="cell-number">0</td>
                            <td class="cell-number">0</td>
                        </tr>
                        <tr class="text-center">
                            <td>РФ</td>
                            <td class="cell-number">0</td>
                            <td class="cell-number">0</td>
                        </tr>
                        <tr class="text-center">
                            <td>ОО</td>
                            <td class="cell-number">0</td>
                            <td class="cell-number">0</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="ibox-footer">
                <a href="#">
                    <button class="btn btn-success col-sm-12">
                        <i class="fa fa-edit"></i>
                        Редактировать
                    </button>

                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="ibox">
            <div class="ibox-title">
                <h5>
                    Сценарии
                </h5>
            </div>
            <div class="ibox-content">
                <table class="table table-bordered">
                    <thead>
                    <tr class="text-center">
                        <td class="col-md-1">id</td>
                        <td class="col-md-2">Сценарий</td>
                        <td class="col-md-4">Файлы</td>
                        <td class="col-md-2">Комментарий</td>
                        <td class="col-md-1">Статус</td>
                        <td class="col-md-1"></td>
                    </tr>

                    </thead>
                    <tbody>
                    {% for i in 1..10 %}
                        <tr class="text-center">
                            <td>{{ i }}</td>
                            <td>
                                Передача оборудования
                            </td>
                            <td>
                                {% for j in 1..5 %}
                                <div class="row mb-3">
                                    <div class="col-sm-6">
                                        <a href="#">
                                            <i class="fa fa-download"></i>
                                            файл
                                        </a>
                                    </div>
                                    <div class="col-sm-6">
                                        <span class="badge badge-primary">
                                            принято
                                        </span>
                                    </div>

                                </div>
                                <hr>
                                {% endfor %}
                            </td>
                            <td>
                                Все принято!
                            </td>
                            <td>
                                <span class="badge badge-primary">
                                    принято
                                </span>
                            </td>
                            <td>
                                <a href="#">
                                    <button class="btn btn-success btn-lg">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="ibox-footer"></div>
        </div>
    </div>
</div>
{% endblock %}
