{% extends 'default/base.html.twig' %}



{% block content %}
<row class="row mt-3">
    <div class="col-lg-12">
        <a href="{{ path('app_region_cofinancing') }}">
            <button type="button" class="btn btn-outline-dark">
                <i class="fa fa-arrow-left"></i>
               Назад
            </button>
        </a>
    </div>
</row>
<div class="row mt-3">
    <div class="col-lg-8 offset-lg-2">
        <div class="ibox">
            <div class="ibox-title">
                <h5>
                    {#Добавить сценарий#}
                </h5>
            </div>
            <div class="ibox-content">
                {{ form_start(form) }}
                    {{ form_row(form.scenario) }}
                    {{ form_row(form.anotherScenario) }}
                    {{ form_row(form.comment) }}
                    {{ form_row(form.files) }}
                <div>
                    <button type="submit" class="btn btn-success mt-3">
                        <i class="fa fa-save"></i>
                        Сохранить
                    </button>
                    <a href="{{ path('app_region_cofinancing') }}">
                        <button type="button" class="btn btn-danger mt-3">
                            <i class="fa fa-close"></i>
                            Отмена
                        </button>
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
            <div class="ibox-footer"></div>
        </div>
    </div>
</div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/inspinia.js') }}"></script>
    <script src="{{ asset('js/plugins/pace/pace.min.js') }}"></script>
    <script src="{{ asset('js/plugins/blueimp/jquery.blueimp-gallery.min.js') }}"></script>
    <script>

        $(document).ready(function(){
            let scenarioInput = $("#form_scenario");
            let anotherScenarioInput = $("#form_anotherScenario");

            scenarioInput.change(function (e) {
                anotherScenarioInput.parent('div').hide();
                anotherScenarioInput.prop( "disabled", true );
                anotherScenarioInput.prop( "required", false );
                if($(this).val() == 'Иное')
                {

                    anotherScenarioInput.parent('div').show();
                    anotherScenarioInput.prop( "disabled", false );
                    anotherScenarioInput.prop( "required", true );

                }

            });
            scenarioInput.trigger('change');

        });
    </script>
{% endblock %}