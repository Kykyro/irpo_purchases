{% extends 'default/base.html.twig' %}

{% block content %}
    <div class="row mt-3">
        <div class="col-lg-10 offset-lg-1">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>

                    </h5>
                </div>
                <div class="ibox-content">
                    <a href="{{ path('app_roiv_add_org') }}">
                        <button class="btn btn-outline-success col-lg-12">
                            Добавить профессиональную образовательную организацию
                        </button>
                    </a>
                    <table class="table table-bordered mt-3">
                        <thead>
                        <tr>
                            <td class="col-md-5">Полное наименование профессиональной образовательной организации</td>
                            <td class="col-md-5">Сокращенное наименование профессиональной образовательной организации</td>
                            <td class="col-md-1">Кол-во строений</td>
                            <td class="col-md-1">Действия</td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in orgs %}
                            <tr>
                                <td>{{ i.getFullName() }}</td>
                                <td>{{ i.getShortName() }}</td>
                                <td>{{ i.getBuildings()|length }}</td>
                                <td>
                                    <a href="#">
                                        <button class="btn btn-success col-lg-12">
                                            <i class="fa fa-search"></i>
                                            Просмотр
                                        </button>
                                    </a>
                                    <a href="{{ path('app_roiv_edit_org', {'id': i.getId()}) }}">
                                        <button class="btn btn-primary col-lg-12">
                                            <i class="fa fa-edit"></i>
                                            Редактировать
                                        </button>
                                    </a>
                                    <a href="#">
                                        <button class="btn btn-danger delete-alert col-lg-12">
                                            <i class="fa fa-edit"></i>
                                            Удалить
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



{% endblock %}