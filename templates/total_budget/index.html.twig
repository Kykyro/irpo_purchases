{% extends 'default/base.html.twig' %}

{% block title %}

{% endblock %}

{% block content %}

    <div class="row mt-3">
        <div class="col-lg-8 offset-lg-2">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>
                        Общий бюджет
                    </h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <td class="col-md-1">Год</td>
                                <td class="col-md-1">Роль</td>
                                <td class="col-md-2">ФБ</td>
                                <td class="col-md-2">РД</td>
                                <td class="col-md-2">СС</td>
                                <td class="col-md-2">ОО</td>
                                <td class="col-md-1">Действия</td>
                            </tr>
                        </thead>
                        <tbody>

                            {% for i in totalBudget %}
                                <tr>
                                    <td>{{ i.getYear() }}</td>
                                    <td>{{ role_mask[i.getRole()] }}</td>
                                    <td class="cell-number">{{ i.getFederal() }}</td>
                                    <td class="cell-number">{{ i.getEmployeers() }}</td>
                                    <td class="cell-number">{{ i.getSubject() }}</td>
                                    <td class="cell-number">{{ i.getEdicational() }}</td>
                                    <td>
                                        <a href="{{ path('app_total_budget_edit', {'id': i.getId()}) }}">
                                            <button class="btn btn-success">
                                                <i class="fa fa-edit"></i>
                                                Редактировать
                                            </button>
                                        </a>
                                        <a href="{{ path('app_total_budget_edit', {'id': i.getId()}) }}">
                                            <button class="btn btn-danger delete-alert">
                                                <i class="fa fa-trash"></i>
                                                Удалить
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}

                        </tbody>
                    </table>
                </div>
                <div class="ibox-footer">
                    <a href="{{ path("app_total_budget_add") }}">
                        <button class="btn btn-primary">
                            <i class="fa fa-plus"></i>
                            Добавить
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
