{% extends 'default/base.html.twig' %}

{% block content %}
    {{ include('default/bas_info.html.twig', {'user_info': user.getUserInfo()}) }}
    <div class="row mt-3">
        <div class="col-sm-10 offset-sm-1">
            <a href="{{ path('app_bas_curator_complex', {'id': user.getId()}) }}">
                <button class="btn btn-outline-dark">
                    <i class="fa fa-arrow-left"></i>
                    Назад
                </button>
            </a>
            <div class="ibox">
                <div class="ibox-title">
                    <h5>
                        {{ event.getName() }}
                    </h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <td class="col-md-1 text-center">№ п/п</td>
                                <td class="col-md-6 text-center">Результат</td>
                                <td class="col-md-2 text-center">Комментарий</td>
                                <td class="col-md-2 text-center">Комментарий от ИРПО</td>
                                <td class="col-md-2 text-center">Статус</td>
                                <td class="col-md-1 text-center">Файлы</td>
                                <td class="col-md-1 text-center"></td>
                            </tr>
                        </thead>
                        <tbody>
                        {% for i in event.getEventResult()|reverse %}
                            <td class="text-center">{{ loop.index }}</td>
                            <td class="text-center">{{ i.getResult() }}</td>
                            <td class="text-center">{{ i.getCommentUser() }}</td>
                            <td class="text-center">{{ i.getCommentCurator() }}</td>
                            <td class="text-center">
                                    <span class="badge ">
                                        {{ i.getStatus() }}
                                    </span>
                            </td>
                            <td class="text-center">
                                {% set files = i.getFiles() %}
                                {% if files|length %}
                                    {% for file in files %}
                                        <a href="{{path('app_download_file_by_route',{'route': 'event_files_directory', 'file': file} ) }}">
                                            <i class="fa fa-download">{{ file }}</i>
                                        </a>
                                        <hr>
                                    {% endfor %}
                                {% else %}
                                    Файлы не прикреплены
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_bas_curator_complex_edit_event', {'id': i.getId()}) }}">
                                    <button class="btn btn-primary btn-lg">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </a>

                            </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="ibox-footer">

                </div>
            </div>

        </div>
    </div>

{% endblock %}
