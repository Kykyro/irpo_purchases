<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Авторизация</title>
    <link rel="shortcut icon" href="/img/ico/rpop_icon.png" type="image/png">

    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('font-awesome/css/font-awesome.css') }}" rel="stylesheet">

    <link href="{{ asset('css/animate.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/my_style.css') }}" rel="stylesheet">

</head>

<body class="gradient-bg">
{% block body %}
    <div class="middle-box text-center loginscreen animated fadeInDown borderElement main-bg margin-up-login transform-center">
        <div>
            {#            <div class="edge d-flex justify-content-center pct-login">#}
            <div class="mx-auto mb-5">

                <img src="/img/ico/rpop_icon.png" width="120" height="120" alt="Добро пожаловать">
                {#                <h1 class="logo-name">Добро пожаловать!</h1>#}

            </div>
            <div class="mb-5">
                <h3 >Авторизация</h3>
            </div>
                <form method="post">
                    <div class="form-group m-3">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                        <div class="form-group">
                            <input type="text" placeholder="Логин" value="{{ last_username }}" name="uuid" id="inputUuid" class="form-control" autocomplete="username" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" placeholder="Пароль" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>

                        <div>
                            <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                            >
                        </div>

                    <button class="btn btn-lg btn-purple m-3" type="submit">
                        Войти
                    </button>
                </div>
                </form>
        </div>
    </div>
{% endblock %}


</body>

</html>

<script src={{ asset('js/bootstrap.js') }}></script>
