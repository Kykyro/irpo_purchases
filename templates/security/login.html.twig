<!DOCTYPE html>

<head>
    <title>Авторизация</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" href="/img/ico/Logo_irpo_2_small.png" type="image/png">

    <link href="{{ asset('landing/css/util.css') }}" rel="stylesheet">
    <link href="{{ asset('landing/css/main.css') }}" rel="stylesheet">

    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('font-awesome/css/font-awesome.css') }}" rel="stylesheet">

    <link href="{{ asset('css/animate.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/my_style.css') }}" rel="stylesheet">

    <style>
        @font-face {
            font-family: Roboto;
        }
        body {
            font-family: "Roboto";
        }
    </style>


</head>

<body style="background-color: #FFFFFF">
{% block body %}
    <div class="overlay-inner cover-background" style="background-image: url({{ asset('img/img_start_landing/Background_2.jpg') }}); background-size: cover; background-repeat: no-repeat; background-position: center;">
    <div class="animated fadeInDown ">
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <div class="login100-form validate-form">
                        <span class="login100-form-title p-b-34">
                            Авторизация
                        </span>
                        <div class="mb-5 col-lg-12">
                            <a href="{{ path('app_start_landing') }}">
                                <button class="btn btn-lg btn-purple col-lg-12" style="background-color: #434c71">
                                    <i class="fa fa-backward"></i>
                                    На главную
                                </button>
                            </a>

                        </div>
                        <form method="post" class="col-lg-12">
                            <div class="form-group m3">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-3">
                                        Вы уже вошли как {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Выйти</a>
                                    </div>
                                {% endif %}

                                <div class="wrap-input100 m-b-20">
                                    <input type="text" placeholder="Логин" value="{{ last_username }}" name="uuid" id="inputUuid" class="input100" autocomplete="username" required autofocus>
                                    <span class="focus-input100"></span>
                                </div>
                                <div class="wrap-input100 m-b-20">
                                    <input type="password" placeholder="Пароль" name="password" id="inputPassword" class="input100" autocomplete="current-password" required>
                                    <span class="focus-input100"></span>
                                </div>

                                <div>
                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >
                                </div>

                                <div class="container-login100-form-btn" type="submit">
                                    <button class="login100-form-btn">
                                        <strong>Войти</strong>
                                    </button>
                                </div>

                                <div class="w-full text-center p-t-27 p-b-239"></div>

                            </div>
                        </form>
                    </div>
                    <img  class="login100-more" src="{{ asset('/img/ico/Logo_irpo_3_big.png') }}" style="background-color: #434c71; object-fit: cover">
                </div>
            </div>
        </div>
        <div id="dropDownSelect1"></div>
    </div>

{% endblock %}
</body>

</html>

<script src={{ asset('js/bootstrap.js') }}></script>
