{% extends "purchases_detail/base.html.twig" %}

{% block content %}
    <style>
        table td{
            border: black 1px solid;
        }
    </style>
    <div class="row">
        <div class="col-lg-12 ">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>История изменений</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <td>ID</td>
                                <td>Поле</td>
                                <td>Старое значение</td>
                                <td>Новое значение</td>
                                <td>Дата изменения</td>
                                <td>Версия</td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for i in pagination %}
                            <tr>
                                <td>{{ i.getForeignKey }}</td>
                                <td>{{ field_dict[i.getFieldName] }}</td>
                                <td>{{ i.getOldVal }}</td>
                                <td>{{ i.getNewVal }}</td>
                                <td>{{ i.getCreatedAt().format('d.m.Y') }}</td>
                                <td>{{ i.getVersion }}</td>

                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="ibox-footer">
                    <div class="navigation">
                        {{ knp_pagination_render(pagination, 'default/twitter_bootstrap_v3_pagination.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}