{% extends "default/base.html.twig" %}


{% block content %}

    <style>
        input[type='number'] {
            -moz-appearance:textfield;
        }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
        }
        .error-message {
            color: #cc0033;
            /*display: inline-block;*/
            font-size: 12px;
            line-height: 15px;
            margin: 5px 0 0;
        }
    </style>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Добавление закупки</h5>

                </div>
                <div class="ibox-content">
                    <h2>
                        Заголовок
                    </h2>
                    <p>
                        Подзагаловок
                    </p>
                    {{ form_start(form, {'attr': {'class': 'wizard-big', 'id': 'form' }}) }}
                    {#<form id="form" action="#" class="wizard-big">#}
                        <h1>Предмет закупки</h1>
                        <fieldset>
                            <h2>Предмет закупки</h2>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <label>Наименование / Объект закупки (В соответсвии с извещением о проведении закупки)</label>
                                        {{ form_widget(form.PurchaseObject) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Способ определения поставщика (подрядчика, исполнителя)</label>
                                        {{ form_widget(form.MethodOfDetermining) }}
                                    </div>
                                    <div class="form-group" id="anotherMethodOfDetermining">
                                        <label>Другое</label>

                                            {{ form_widget(form.anotherMethodOfDetermining,
                                                {attr: {'value' : method}}) }}


                                    </div>
                                </div>

                            </div>

                        </fieldset>
                        <h1>Цена контракта/договора</h1>
                        <fieldset>
                            <h2>Цена контракта/договора</h2>
                            <div class="row">
                                <div class="col-lg-12">
                                    <table class="col-lg-12" >
                                        <tr>
                                            <td class="table-title"></td>
                                            <td class="table-title" colspan="1">
                                                <strong>
                                                    Начальная (максимальная) цена контракта (РУБЛИ)
                                                </strong>
                                            </td>
                                            <td class="table-title">
                                                <strong>
                                                    Цена контракта / договора (РУБЛИ)
                                                </strong>
                                            </td>


                                        </tr>

                                        <tr>
                                            <td>средства федерального бюджета</td>


                                            <td>
                                                {{ form_widget(form.initialFederalFunds, {"type":"number"}) }}
                                            </td>

                                            <td>
                                                {{ form_widget(form.finFederalFunds, {"type":"number"}) }}
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>средства субъекта РФ</td>


                                            <td>
                                                {{ form_widget(form.initialFundsOfSubject, {"type":"number"}) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.finFundsOfSubject, {"type":"number"}) }}
                                            </td>

                                        </tr>
                                        <tr>
                                            <td class="table-subtitle" colspan="3">
                                                <strong>
                                                    внебюджетные средства
                                                </strong>
                                            </td>



                                        </tr>
                                        <tr>
                                            <td>средства работодателей</td>
                                            <td>
                                                {{ form_widget(form.initialEmployersFunds, {"type":"number"}) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.finEmployersFunds, {"type":"number"}) }}
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>средства образовательной организации</td>


                                            <td>
                                                {{ form_widget(form.initialEducationalOrgFunds, {"type":"number"}) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.finFundsOfEducationalOrg, {"type":"number"}) }}
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                Сумма
                                            </td>
                                            <td>
                                                <p class="sum_initial">0</p>

                                            </td>
                                            <td>
                                                <p class="sum_fin">0</p>

                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </fieldset>




                        <h1>Срок размещения закупки в ЕИС / ЭМ </h1>
                        <fieldset>
                            <h2>Срок размещения закупки в ЕИС / ЭМ</h2>
                            <div class="form-group">
                                <label>Дата публикации извещения</label>
                                {{ form_widget(form.publicationDate) }}
                            </div>
                            <div class="form-group">
                                <label>Дата окончания подачи заявок</label>
                                {{ form_widget(form.deadlineDate) }}
                            </div>
                            <div class="form-group">
                                <label>Дата подведения итогов</label>
                                {{ form_widget(form.dateOfSummingUp) }}
                            </div>
                        </fieldset>





                        <h1>Ссылка на закупку </h1>
                        <fieldset>
                            <h2>Ссылка на закупку</h2>
                            <div class="form-group">
                                <label>Ссылка на закупку на портале zakupki.gov.ru, прочие площадки</label>
                                {{ form_widget(form.PurchaseLink) }}
                            </div>
                            <div class="form-group">
                                <label>Номер закупки</label>
                                {{ form_widget(form.PurchaseNumber, {'type':'number'}) }}
                            </div>


                        </fieldset>




                        <h1>Перенос срока размещения закупки в ЕИС / ЭМ</h1>
                        <fieldset>
                            <h2>Перенос срока размещения закупки в ЕИС / ЭМ</h2>
                            <div class="form-group">
                                <label>Дата</label>
                                {{ form_widget(form.postponementDate) }}
                            </div>
                            <div class="form-group">
                                <label>причина (обоснование)</label>
                                {{ form_widget(form.postonementComment) }}
                            </div>
                        </fieldset>

                        <h1>Поставщик</h1>
                        <fieldset>
                            <h2>Поставщик</h2>
                            <div class="form-group">
                                <label>Наименование организации-поставщика (подрядчика, исполнителя)</label>
                                {{ form_widget(form.supplierName) }}
                            </div>
                            <div class="form-group">
                                <label>ИНН</label>
                                {{ form_widget(form.supplierINN) }}
                            </div>
                            <div class="form-group">
                                <label>КПП</label>
                                {{ form_widget(form.supplierKPP) }}
                            </div>
                        </fieldset>

                        <h1>Какой то пункт</h1>
                        <fieldset>
                            <h2>Какой то пункт</h2>
                            <div class="form-group">
                                <label>Дата заключения контракта / договора</label>
                                {{ form_widget(form.DateOfConclusion) }}
                            </div>



                            <div class="form-group">
                                <label>Срок поставки (подписание акта), дата</label>
                                {{ form_widget(form.DeliveryTime) }}
                            </div>
                            <div class="form-group">
                                <label>Комментарии / Примечания</label>
                                {{ form_widget(form.Comments) }}
                            </div>
                            <div class="form-group">
                                <label>Добавить файл при необходимости</label>
                                {{ form_widget(form.file) }}
                            </div>
                        </fieldset>




                        <h1>Финиш</h1>
                        <fieldset>
                            {{ form_widget(form.save) }}
                            {% if edit %}
                                {{ form_widget(form.saveAndAddNew,
                                    {'attr': {
                                        'hidden': true
                                    }}) }}
                            {% else %}
                                {{ form_widget(form.saveAndAddNew) }}
                            {% endif %}
                        </fieldset>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>


{% endblock %}

{% block scripts %}
    {#<script src=""></script>#}
    {#<script src="{{ asset('js/inspinia.js') }}"></script>#}
    {#<script src="{{ asset('js/plugins/pace/pace.min.js') }}"></script>#}
    {#<script src="{{ asset('js/bootstrap.js') }}"></script>#}
    {#<script src="{{ asset('js/plugins/metisMenu/jquery.metisMenu.js') }}"></script>#}
    {#<script src="{{ asset('js/plugins/slimscroll/jquery.slimscroll.min.js') }}"></script>#}

    <script src="{{ asset('js/plugins/steps/jquery.steps.min.js') }}"></script>
    <script src="{{ asset('js/plugins/validate/jquery.validate.min.js') }}"></script>

    <script>
        $(document).ready(function(){


            $("#wizard").steps();
            $("#form").steps({
                bodyTag: "fieldset",
                labels: {
                    current: "current step:",
                    pagination: "Pagination",
                    finish: "Финиш",
                    next: "Далее",
                    previous: "Назад",
                    loading: "Loading ..."
                },
                onStepChanging: function (event, currentIndex, newIndex)
                {
                    // Always allow going backward even if the current step contains invalid fields!
                    if (currentIndex > newIndex)
                    {
                        return true;
                    }

                    // Forbid suppressing "Warning" step if the user is to young
                    if (newIndex === 3 && Number($("#age").val()) < 18)
                    {
                        return false;
                    }

                    var form = $(this);

                    // Clean up if user went backward before
                    if (currentIndex < newIndex)
                    {
                        // To remove error styles
                        $(".body:eq(" + newIndex + ") label.error", form).remove();
                        $(".body:eq(" + newIndex + ") .error", form).removeClass("error");
                    }

                    // Disable validation on fields that are disabled or hidden.
                    form.validate().settings.ignore = ":disabled,:hidden";

                    // Start validation; Prevent going forward if false
                    return form.valid();
                },
                onStepChanged: function (event, currentIndex, priorIndex)
                {
                    // Suppress (skip) "Warning" step if the user is old enough.
                    if (currentIndex === 2 && Number($("#age").val()) >= 18)
                    {
                        $(this).steps("Далее");
                    }

                    // Suppress (skip) "Warning" step if the user is old enough and wants to the previous step.
                    if (currentIndex === 2 && priorIndex === 3)
                    {
                        $(this).steps("Назад");
                    }
                    $("a[href='#finish']").hide();

                },
                onFinishing: function (event, currentIndex)
                {

                    var form = $(this);

                    // Disable validation on fields that are disabled.
                    // At this point it's recommended to do an overall check (mean ignoring only disabled fields)
                    form.validate().settings.ignore = ":disabled";

                    // Start validation; Prevent form submission if false
                    return form.valid();
                },
                onFinished: function (event, currentIndex)
                {
                    var form = $(this);

                    // Submit form input
                    form.submit();
                }
                }).validate({

                    rules: {

                        'purchases_form[PurchaseObject]': "required",
                        'purchases_form[anotherMethodOfDetermining]': "required",
                    },
                    messages: {
                        'purchases_form[PurchaseObject]': "Введите предмет закупки",
                        'purchases_form[anotherMethodOfDetermining]': "Укажите Способ определения поставщика",

                    }
                });

        });
    </script>
    <script src="{{ asset('js/scripts/purchases_detail_new.js') }}"></script>
{% endblock %}