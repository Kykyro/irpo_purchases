{% extends 'default/base.html.twig' %}

{% block content %}
    {% for i in user.getClusterAddresses() %}
    <div class="row mt-3">
        <div class="col-sm-10 offset-sm-1">
            <div class="ibox">
                <div class="ibox-title">
                    {{ i.getAddresses() }}
                </div>
                <div class="ibox-content">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for zone in i.getClusterZones %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_spectator_readiness_map_zone', {'id': zone.getId()}) }}">
                                            <button class="btn btn-outline-dark">
                                                {{ zone.getName() }}
                                            </button>

                                        </a>

                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

{% endblock %}