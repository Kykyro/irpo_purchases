{% extends 'default/base.html.twig' %}

{% block content %}
    {#{{ include('default/inDevelopment.html.twig') }}#}
    <div class="row mt-3">
        <div class="offset-lg-3 col-lg-6">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>
                        История
                    </h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <td class="col-md-1">Дата</td>
                                <td class="col-md-3">Тип</td>
                                <td class="col-md-1">Скачать</td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for i in contracts %}
                                <tr>
                                    <td>{{ i.getCreatedAt().format('d.m.Y') }}</td>
                                    <td>{{ dict[i.getType()] }}</td>
                                    <td>
                                        <a href="{{ path('app_download_file_by_route', {'route': 'contracting_tables_directory', 'file': i.getName()}) }}">
                                            <button class="btn btn-success">
                                                <i class="fa fa-download"></i>
                                                Скачать
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="ibox-footer">
                    <div class="navigation">
                        {{ knp_pagination_render(contracts, 'default/twitter_bootstrap_v3_pagination.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block scripts %}

{% endblock %}
