                    $(designFile[e]).height('1000');
                    $(designFile[e]).width('100%');
                }
                // console.log(e);
                // console.log($(designFile[e]) );
                // console.log($(designFile[e]).data('file').includes('.pdf') );
                // if(designFile && designFile.includes('.pdf'))
                // {
                //     $('embed').height('800');
                //     $('embed').width('100%');
                // }
            });






            $(".button-toggle").hide();



        });
    </script>
{% endblock %}
