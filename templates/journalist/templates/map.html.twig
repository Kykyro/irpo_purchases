{% extends "journalist/index.html.twig" %}

{% block content %}

    <div class="row">

        {% if map is defined %}

            <ul class="row col-lg-12">

                    <div class="col-sm-8 offset-sm-2">
                        <div class="wrapper wrapper-content ">
                            <div class="ibox-content block-shadow">
                                {{ include('journalist/templates/back_button.html.twig') }}
                            {% for i in map %}
                                <div class="m-2">
                                    <a href="{{ path('app_map_edit', {'id': i.getId}) }}" class="d-flex justify-content-center">
                                        <button class="btn btn-primary col-lg-8">
                                            {{ i.getName() }}
                                        </button>
                                    </a>
                                </div>
                            {% endfor %}
                            </div>
                        </div>
                    </div>
            </ul>
        {% endif %}


    </div>
    <div class="row">
        <div class="col-sm-8 offset-sm-2 ">
            <div class="wrapper wrapper-content ">
                <div class="ibox-content block-shadow ">
                {% if form is defined %}
                    <div class="row">
                        <a href="{{ path('app_map_edit') }}">
                            <button class="btn btn-primary m-3">
                                Назад
                            </button>
                        </a>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            {{ form_start(form) }}
                                <label> Название региона </label>
                                {{ form_widget(form.name) }}
                                <label> Номер региона </label>
                                {{ form_widget(form.ident) }}
                                <label> Организации </label>
                                {{ form_widget(form.organization) }}
                                <div>
                                    <strong>Текущее значение организаций: </strong>
                                    {{ orgContent }}
                                </div>
                                {{ form_widget(form.submit) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {% endif %}
{% endblock %}