{% extends "journalist/index.html.twig" %}




{% block content %}
<style>
    .btn{
        font-size: 14pt;
    }
</style>
<div class="row">
    <div class="col-sm-8 offset-sm-2 ">
        <div class="wrapper wrapper-content ">
            <div class="ibox-content block-shadow ">
                <div>
                    <h2>Главная страница</h2>
                    <div class="m-3">
                        <a href="{{ path('app_list_article') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-list"></div>
                                Список новостей
                            </button>
                        </a>
                    </div>
                    <div class="m-3">
                        <a href="{{ path('app_new_article') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-plus"></div>
                                Создать статью
                            </button>
                        </a>
                    </div>
                    <div class="m-3">
                        <a href="{{ path('app_cropper') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-image"></div>
                                Редактировать изображение
                            </button>
                        </a>
                    </div>
                    <h2>Карта</h2>
                    <div class="m-3">
                        <a href="{{ path('app_map_edit') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-compass"></div>
                                Редактировать карту
                            </button>
                        </a>
                    </div>
                    <h2>Инфраструктурные листы</h2>
                    <div class="m-3">
                        <a href="{{ path('app_journalist_infrastructure_sheet_list') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-list"></div>
                                Список инфраструктурных листов
                            </button>
                        </a>
                    </div>
                    <div class="m-3">
                        <a href="{{ path('app_journalist_infrastructure_sheet_add') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-plus"></div>
                                Добавить инфраструктурный лист
                            </button>
                        </a>
                    </div>
                    <h2>Отрасли</h2>
                    <div class="m-3">
                        <a href="{{ path('app_journalist_industry_list') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-list"></div>
                                Список отраслей
                            </button>
                        </a>
                    </div>
                    <div class="m-3">
                        <a href="{{ path('app_journalist_industry_add') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-plus"></div>
                                Добавить отрасль
                            </button>
                        </a>
                    </div>
                    <h2>УГПС</h2>
                    <div class="m-3">
                        <a href="{{ path('app_journalist_UGPS_list') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-list"></div>
                                Список УГПС
                            </button>
                        </a>
                    </div>
                    <div class="m-3">
                        <a href="{{ path('app_journalist_UGPS_add') }}" class="d-flex justify-content-center">
                            <button class="btn btn-primary col-lg-8">
                                <div class="fa fa-plus"></div>
                                Добавить УГПС
                            </button>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}