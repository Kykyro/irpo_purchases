{% extends "journalist/index.html.twig" %}


{% block content %}

    <div class="row">
        <div class="col-sm-10 offset-sm-1 ">
            {{ include('journalist/templates/back_button.html.twig') }}
            <div class="ibox">
                <div class="ibox-title">
                    <h5>
                        Редактор инфраструктурных листов
                    </h5>
                </div>
                <div class="ibox-content ">

                    {{ form_start(form) }}
                    <label> Название </label>
                    {{ form_widget(form.name) }}
                    <label class="label-hidden"> Отрасль </label>
                    {{ form_widget(form.industry) }}
                    <label class="label-hidden"> УГПС </label>
                    {{ form_widget(form.UGPS) }}
                    <label> Тип </label>
                    {{ form_widget(form.type) }}


                    <label> Файл </label>
                    {{ form_widget(form.file_IS) }}
                    <div>
                        текущий файл: {{ file }}
                    </div>
                    <div class="form-group mt-3">
                        {{ form_widget(form.hide) }}
                        {{ form_label(form.hide) }}
                    </div>
                    {{ form_widget(form.submit) }}
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    {#<script src="{{ asset('js/scripts/IS_form.js?v=0.2') }}"></script>#}
{% endblock %}
